{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://learngraphics.local/schemas/capability-card.schema.json",
  "title": "CapabilityCard",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "capability_id",
    "name",
    "version",
    "status",
    "domain",
    "level",
    "inputs",
    "outputs",
    "dependencies",
    "constraints",
    "quality_criteria",
    "template_refs",
    "dsl_refs",
    "failure_codes",
    "examples"
  ],
  "properties": {
    "capability_id": {
      "type": "string",
      "pattern": "^[a-z]+(\\.[a-z0-9_]+)+$"
    },
    "name": {
      "type": "string",
      "minLength": 2
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "deprecated",
        "removed"
      ]
    },
    "replaced_by": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^[a-z]+(\\.[a-z0-9_]+)+$"
    },
    "domain": {
      "type": "string"
    },
    "level": {
      "type": "string",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ]
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "outputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "quality_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "template_refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "dsl_refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "failure_codes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "input",
          "output_summary"
        ],
        "additionalProperties": true,
        "properties": {
          "input": {
            "type": "object"
          },
          "output_summary": {
            "type": "string",
            "minLength": 2
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "status": {
            "const": "deprecated"
          }
        },
        "required": [
          "status"
        ]
      },
      "then": {
        "required": [
          "replaced_by"
        ]
      }
    }
  ]
}
