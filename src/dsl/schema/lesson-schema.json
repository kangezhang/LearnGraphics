{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://learn-graphics.local/schema/lesson-schema.json",
  "title": "Lesson DSL",
  "type": "object",
  "required": ["meta"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["id", "title"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "level": { "type": "string" },
        "order": { "type": "number" }
      },
      "additionalProperties": true
    },
    "entities": {
      "type": "array",
      "items": { "$ref": "#/$defs/entity" }
    },
    "relations": {
      "type": "array",
      "items": { "$ref": "#/$defs/relation" }
    },
    "process": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "config": { "type": "object" }
      },
      "additionalProperties": true
    },
    "views": {
      "type": "array",
      "items": { "$ref": "#/$defs/view" }
    },
    "ui": {
      "type": "object",
      "properties": {
        "constants": {
          "type": "object",
          "additionalProperties": {
            "type": ["number", "string", "boolean"]
          }
        },
        "sliders": {
          "type": "array",
          "items": { "$ref": "#/$defs/uiSlider" }
        },
        "bindings": {
          "type": "array",
          "items": { "$ref": "#/$defs/uiBinding" }
        }
      },
      "additionalProperties": true
    },
    "timeline": { "$ref": "#/$defs/timeline" }
  },
  "$defs": {
    "entity": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": {
          "type": "string",
          "enum": [
            "node",
            "edge",
            "point",
            "line",
            "plane",
            "model",
            "arrow",
            "symbol",
            "label",
            "marker",
            "badge",
            "step_sequence",
            "state_overlay",
            "trace_trail",
            "scalar_field",
            "surface_field",
            "vector_field",
            "sample_probe"
          ]
        },
        "anchor": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 3,
              "maxItems": 3
            }
          ]
        },
        "position": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 3,
          "maxItems": 3
        },
        "direction": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 3,
              "maxItems": 3
            },
            { "type": "string" }
          ]
        },
        "label": { "type": "string" },
        "color": { "type": "string" },
        "props": { "type": "object" }
      },
      "additionalProperties": true
    },
    "relation": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "minLength": 1 },
        "source": { "type": "string" },
        "target": { "type": "string" },
        "from": { "type": "string" },
        "to": { "type": "string" },
        "vectorA": { "type": "string" },
        "vectorB": { "type": "string" },
        "props": { "type": "object" }
      },
      "additionalProperties": true
    },
    "view": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "enum": ["3d", "graph", "inspector", "plot"] },
        "camera": { "type": "object" },
        "overlays": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    },
    "marker": {
      "type": "object",
      "required": ["time", "label"],
      "properties": {
        "time": { "type": "number", "minimum": 0 },
        "label": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "color": { "type": "string" },
        "relatedEntities": { "type": "array", "items": { "type": "string" } },
        "relatedView": { "type": "string" }
      },
      "additionalProperties": true
    },
    "uiBinding": {
      "type": "object",
      "required": ["target", "property"],
      "properties": {
        "id": { "type": "string" },
        "target": { "type": "string", "minLength": 1 },
        "targetKind": { "type": "string", "enum": ["entity", "relation"] },
        "property": { "type": "string", "minLength": 1 },
        "expr": { "type": "string", "minLength": 1 },
        "value": { "type": ["number", "string", "boolean"] }
      },
      "additionalProperties": true
    },
    "uiSlider": {
      "type": "object",
      "required": ["id", "label", "min", "max", "value"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "label": { "type": "string", "minLength": 1 },
        "min": { "type": "number" },
        "max": { "type": "number" },
        "step": { "type": "number", "exclusiveMinimum": 0 },
        "value": { "type": "number" },
        "bindings": {
          "type": "array",
          "items": { "$ref": "#/$defs/uiBinding" }
        }
      },
      "additionalProperties": true
    },
    "timeline": {
      "type": "object",
      "required": ["duration"],
      "properties": {
        "duration": { "type": "number", "minimum": 0 },
        "loop": { "type": "boolean" },
        "speed": { "type": "number", "exclusiveMinimum": 0 },
        "markers": {
          "type": "array",
          "items": { "$ref": "#/$defs/marker" }
        },
        "tracks": {
          "type": "array",
          "items": { "type": "object" }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
